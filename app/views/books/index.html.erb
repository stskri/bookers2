<div>
  <h2>User info</h2>
  user_img
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th>
          <%= current_user.id %>
        </th>
      </tr>
      <tr>
        <th>introduction</th>
        <th>
          <%= current_user.introduction %>
        </th>
      </tr>
    </tbody>
  </table>

  <%= link_to "edit buttom", edit_user_path(@user.id) %>

  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <div>
      <div>
        <label>Title</label>
      </div>
      <div>
        <%= f.text_field :title %>
      </div>
    </div>
    <div>
      <div>
        <label>Opinion</label>
      </div>
      <div>
        <%= f.text_area :body %>
      </div>
    </div>
    <div>
      <%= f.submit "Create Book" %>
    </div>
  <% end %>

</div>



<div>
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag 'default-image(80x80).jpg' %> user_img</td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>