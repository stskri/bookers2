<div>
  <h2>User info</h2>
  user_img
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th>
          <%= current_user.id %>
        </th>
      </tr>
      <tr>
        <th>introduction</th>
        <th>
          <%= current_user.introduction %>
        </th>
      </tr>
    </tbody>
  </table>
  
  <strong>edit bottom</strong>

  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <div>
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div>
      <label>Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit "Create Book" %>
    </div>
  <% end %>
  
</div>



<div>
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <% @books.each do |book| %>
          <td><%= image_tag 'default-image(80x80).jpg' %> user_img</td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>