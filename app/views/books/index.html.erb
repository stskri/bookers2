<div>
  <h2>User info</h2>
  <div>
    <%= image_tag current_user.get_profile_image(100,100) %>
  </div>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th>
          <%= current_user.name %>
        </th>
      </tr>
      <tr>
        <th>introduction</th>
        <th>
          <%= current_user.introduction %>
        </th>
      </tr>
    </tbody>
  </table>

  <%= link_to "edit buttom", edit_user_path(current_user.id) %>

  <%= render 'newbook' %>

</div>



<div>
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image(80,80) %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>