<% if notice %>
  <p><%= notice %></p>
<% end %>

<div>
  <%= render 'users/info_edit', user: @book.user %>
  <%= render 'newbook' %>
</div>

<div>
  <h2>Book detail</h2>
  <table>
    <tbody>
      <tr>
        <td>
          <%= image_tag @book.user.get_profile_image(80,80) %>
          <%= @book.user.name %>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td>

        </td>
        <td>
          <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id) %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
            </td>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

