<div>
  <div>
    <div>
      <h1>Editing Book</h1>

      <div>
      <% if @book.errors.any? %>
        <div>
          <h3><%= @book.errors.count  %>
            <% if @book.errors.count >= 2 %>
              errors
            <% else %>
              error
            <% end %>
          prohibited this obj from being saved:</h3>
        </div>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      </div>

      <%= form_with model: @book do |f| %>
        <div>
          <div><label>Title</label></div>
          <div>
            <%= f.text_field :title %>
          </div>
        </div>

        <div>
          <div><label>Opinion</label></div>
          <div>
            <%= f.text_area :body %>
          </div>
        </div>

        <div>
          <%= f.submit "Update Book" %>
        </div>
      <% end %>
      <%= link_to "show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>