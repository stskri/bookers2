<div>
  <h2>New book</h2>
    <%= form_with model: @book do |f| %>
      <div>
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div>
        <label>Opinion</label>
        <%= f.text_area :body %>
      </div>
      <div>
        <%= f.submit "Create Book" %>
      </div>
    <% end %>
</div>