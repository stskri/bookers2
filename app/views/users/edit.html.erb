<div>
  <div>
    <div>
      <h2>User info</h2>
        <% if @user.errors.any? %>
          <div>
            <%= @user.errors.count  %>
              <% if @user.errors.count >= 2 %>
                errors
              <% else %>
                error
              <% end %>
            prohibited this obj from being saved:</h3>
          </div>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

      <%= form_with model: @user do |f| %>
        <div>
          <div><label>Name</label></div>
          <div>
            <%= f.text_field :name, autofocus: true %>
          </div>
        </div>
        <div>
          <div><labes>Image</labes></div>
          <div>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
        </div>
        <div>
          <div><label>Introduction</label></div>
          <div>
            <%= f.text_area :introduction %>
          </div>
        </div>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>