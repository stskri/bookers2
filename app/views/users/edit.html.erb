<div class="container">
  <div class="row">
    <div class="px-5 px-auto">
      <h2>User info</h2>
        <% if @user.errors.any? %>
          <div>
            <%= @user.errors.count  %>
              <% if @user.errors.count >= 2 %>
                errors
              <% else %>
                error
              <% end %>
            prohibited this obj from being saved:</h3>
          </div>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <div><label>Name</label></div>
          <div>
            <%= f.text_field :name, autofocus: true, class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div><labes>Image</labes></div>
          <div>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
        </div>
        <div class="form-group">
          <div><label>Introduction</label></div>
          <div>
            <%= f.text_area :introduction, class:"form-control"  %>
          </div>
        </div>
        <div class="form-group">
          <%= button_tag(type: 'submit', class: 'btn btn-secondary') do %>
            <div>Update User</div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>